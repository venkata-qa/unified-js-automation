{
  "name": "playwright-automation-framework",
  "version": "1.0.0",
  "description": "Playwright Test Automation Framework with Cucumber and BrowserStack",
  "main": "index.js",
  "author": "Sridhar Vuttarkar",
  "license": "ISC",
  "keywords": [
    "playwright",
    "cucumber",
    "automation",
    "testing",
    "browserstack"
  ],
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "scripts": {
    "test": "npm run test:local",
    "dev": "npx cucumber-js --tags '@E2EUI'",
    "test:local": "npm run clean && npx cucumber-js --tags '@E2EUI'",
    "test:api": "npm run clean && npx cucumber-js --tags '@ApiRegression'",
    "test:ui": "npm run clean && cross-env BROWSER=chrome npx cucumber-js --tags '@ui'",
    "test:e2e": "npm run clean && npx cucumber-js --tags '@E2E'",
    "test:smoke": "npm run clean && npx cucumber-js --tags '@smoke'",
    "bs:win": "npm run clean && cross-env ENV=browserstack BROWSER=win_chrome npx cucumber-js --tags '@E2EUI'",
    "bs:mac": "npm run clean && cross-env ENV=browserstack BROWSER=mac_safari npx cucumber-js --tags '@ui'",
    "bs:ios": "npm run clean && cross-env ENV=browserstack BROWSER=ios_safari npx cucumber-js --tags '@ui'",
    "bs:android": "npm run clean && cross-env ENV=browserstack BROWSER=android_chrome npx cucumber-js --tags '@ui'",
    "lint": "eslint src/ tests/ scripts/ --fix",
    "lint:check": "eslint src/ tests/ scripts/",
    "format": "prettier --write '**/*.{js,json,yml,yaml,md}'",
    "format:check": "prettier --check '**/*.{js,json,yml,yaml,md}'",
    "clean": "rimraf reports/ allure-results/",
    "report": "npm run allure:generate && npm run allure:open",
    "allure:generate": "node scripts/generateAllureReport.js generate",
    "allure:open": "node scripts/generateAllureReport.js open",
    "setup": "npm run install:browsers",
    "install:browsers": "npx playwright install",
    "setup:windows": "node scripts/test-browserstack-windows.js",
    "health": "node scripts/healthCheck.js",
    "status": "node scripts/framework-status.js",
    "validate": "npm run lint:check && npm run format:check",
    "prepare": "husky"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.10.1",
    "@cucumber/cucumber": "^12.0.0",
    "@cucumber/messages": "^28.0.0",
    "@playwright/test": "1.52.0",
    "playwright": "1.52.0",
    "allure-commandline": "^2.34.1",
    "allure-cucumberjs": "^3.3.2",
    "allure-js-commons": "^3.3.2",
    "axe-html-reporter": "^2.2.11",
    "chai": "^4.5.0",
    "cross-env": "^7.0.3",
    "cucumber-html-reporter": "^6.0.0",
    "dotenv": "^16.6.1",
    "eslint": "^8.57.1",
    "faker": "^6.6.6",
    "husky": "^9.1.7",
    "lighthouse": "^12.8.0",
    "lint-staged": "^15.2.10",
    "multiple-cucumber-html-reporter": "^3.9.3",
    "nodemailer": "^7.0.5",
    "prettier": "^3.4.2",
    "rimraf": "^6.0.1",
    "snyk": "^1.1298.1",
    "web-vitals": "^4.2.4"
  },
  "dependencies": {
    "ajv": "^8.17.1",
    "ajv-formats": "^3.0.1",
    "axios": "^1.10.0",
    "config": "3.3.12",
    "csv-parse": "^6.1.0",
    "csv-stringify": "^6.6.0",
    "fs-extra": "^11.2.0",
    "js-yaml": "^4.1.0",
    "jsonpath": "^1.1.1",
    "mysql2": "^3.14.2",
    "randomstring": "^1.3.1",
    "winston": "^3.17.0",
    "winston-daily-rotate-file": "^5.0.0",
    "xlsx": "^0.18.5"
  },
  "lint-staged": {
    "*.{js,json,yml,yaml,md}": [
      "prettier --write"
    ],
    "*.js": [
      "eslint --fix"
    ]
  }
}